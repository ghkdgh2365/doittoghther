<h2><%= bulletin_name params[:bulletin_id] %></h2>

<table class="table">
  <thead>
    <tr>
      <th>제목</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td>
          <%= link_to '확인하기', (@bulletin.present? ? [post.bulletin, post] : post), class: 'btn btn-default' %>
          <%= link_to '수정하기', (@bulletin.present? ? edit_bulletin_post_path(post.bulletin, post) : edit_post_path(post)), class: 'btn btn-default' if post.updatable_by? current_user %>
          <%= link_to '삭제하기', (@bulletin.present? ? [post.bulletin, post] : post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' if post.deletable_by? current_user %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  <% if @posts.updatable_by? current_user %>
  <%= link_to '작성하기', (@bulletin.present? ?  new_bulletin_post_path(@bulletin) : new_post_path), class: 'btn btn-default' %>
  <% end %>